extends base.pug

block content
  body(class="container")
    div(class="col-sm-8 col-sm-offset-2")
      nav(class="navbar navbar-default")
        a(class="navbar-brand" href="/") Mutably Front-end
        a(class="navbar-brand" href="/books") books
        a(class="navbar-brand" href="/pokemon") pokemon
        a(class="navbar-brand" href="albums") albums
      div(class="panel panel-default")
        div(class="panel-heading") Books
        ul(class="list-group")
          <!-- your resource items here -->
      div(class="panel panel-default")
        form(action="/books" method="POST")
          span Title:
          input(type="text" name="title")
          span Author:
          input(type="text" name="author")
          br
          span Image URL:
          input(type="text" name="image")
          span Release Date:
          input(type="text" name="releaseDate")
          input(type="submit" class="addBook")

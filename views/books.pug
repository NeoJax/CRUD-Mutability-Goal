extends base.pug

block content
  body(class="container")
    div(class="col-sm-8 col-sm-offset-2")
      nav(class="navbar navbar-default")
        a(class="navbar-brand" href="/") Mutably Front-end
        a(class="navbar-brand" href="/books") books
        a(class="navbar-brand" href="/pokemon") pokemon
        a(class="navbar-brand" href="albums") albums
      div(class="findBar ui left action right labeled input center")
        span(class="ui label") Title:
        input(type="text" name="title" id="findTitle")
        button(class="findBook ui button") Find a Book
      br
      div(class="ui segments")
        div(class="ui top segment heading") Books
        div(class="ui secondary segment list-group")
          <!-- your resource items here -->
      div
        form(action="/books" method="POST" id="newBookForm" class="ui form")
          div(class="field") Title:
            input(type="text" name="title")
          div(class="field") Author:
            input(type="text" name="author")
          div(class="field") Image URL:
            input(type="text" name="image")
          div(class="field") Release Date:
            input(type="text" name="releaseDate")
          input(type="submit" class="addBook ui button")
      br  
      i(class="hand lizard icon")
